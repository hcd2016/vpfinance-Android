<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    
    <!-- Application theme. -->
    <style name="AppStartTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/white</item>
    </style>
    
    
	<style name="segment_item_left">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@drawable/segment_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/segment_item_left</item>
        <item name="android:button">@null</item>
    </style>
    <style name="segment_item_right" parent="@style/segment_item_left">
        <item name="android:background">@drawable/segment_item_right</item>
    </style>
    <style name="segment_item_mid" parent="@style/segment_item_left">
        <item name="android:background">@drawable/segment_item_mid</item>
    </style>
    
    
    <style name="maintab_button">
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/maintab_text_color</item>
    </style>

    <style name="progressdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/progress_dialog_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    
 <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_green</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_red</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>
    <style name="ValueTextStyle" parent="TextStyle">
        <item name="android:textColor">@color/assist_text_color</item>
    </style>

    <style name="SingleLineTextStyle" parent="TextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="EditTextStyle" parent="SingleLineTextStyle">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="PasswdTextStyle" parent="EditTextStyle">
        <item name="android:password">true</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxEms">16</item>
        <item name="android:minEms">6</item>
        <item name="android:maxLength">16</item>
    </style>
    <style name="DecimalEditStyle" parent="EditTextStyle">
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="NumberEditStyle" parent="EditTextStyle">
        <item name="android:inputType">number</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_4985ff</item>
        <item name="colorControlActivated">@color/text_4985ff</item>
    </style>
    <style name="SampleEditTextStyle" parent="EditTextStyle">
        <item name="android:paddingLeft">14dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="SamplePasswdTextStyle" parent="PasswdTextStyle">
        <item name="android:paddingLeft">14dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="SampleNumberEditStyle" parent="NumberEditStyle">
        <item name="android:paddingLeft">14dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="SubmitButtonStyle" parent="SingleLineTextStyle">
        <item name="android:background">@drawable/bg_submit</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textColor">@drawable/bg_btn_textcolor_submit</item>
        <item name="android:textSize">@dimen/submit_text_size</item>
    </style>

    <style name="NoRadiusSubmitButtonStyle" parent="SingleLineTextStyle">
        <item name="android:background">@drawable/bg_submit_no_radius</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textColor">@drawable/bg_btn_textcolor_submit</item>
        <item name="android:textSize">@dimen/submit_text_size</item>
    </style>

    <style name="AreaTextStyle" parent="TextStyle">

    </style>
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstar</item>
    </style>

    <style name="FinanceTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="VPDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translate_black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MyCustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="IconCircleImageViewStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/MyCustomDialog</item>
    </style>


    <style name="progress_dialog_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="ActionSheetStyleIOS6">
        <item name="actionSheetBackground">@drawable/actionsheet_as_bg_ios6</item>
        <item name="cancelButtonBackground">@drawable/actionsheet_as_cancel_bt_bg</item>
        <item name="otherButtonTopBackground">@drawable/actionsheet_as_other_bt_bg</item>
        <item name="otherButtonMiddleBackground">@drawable/actionsheet_as_other_bt_bg</item>
        <item name="otherButtonBottomBackground">@drawable/actionsheet_as_other_bt_bg</item>
        <item name="otherButtonSingleBackground">@drawable/actionsheet_as_other_bt_bg</item>
        <item name="cancelButtonTextColor">@android:color/white</item>
        <item name="otherButtonTextColor">@android:color/black</item>
        <item name="actionSheetPadding">20dp</item>
        <item name="otherButtonSpacing">5dp</item>
        <item name="cancelButtonMarginTop">20dp</item>
        <item name="actionSheetTextSize">16sp</item>
    </style>

    <style name="ActionSheetStyleIOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/actionsheet_slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/actionsheet_slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/actionsheet_slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/actionsheet_slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/actionsheet_slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#1E82FF</item>
        <item name="otherButtonTextColor">#1E82FF</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">16sp</item>
    </style>
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">
            @anim/popup_up_in</item>
        <item   name="android:windowExitAnimation">
            @anim/popup_down_out</item>
    </style>

    <style name="MyCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="item_rate_text_style1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="item_rate_text_style2">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTransparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>-->
    </style>
    <style name="ActivityTransparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 半透明 -->
    </style>

    <!-- 重新主题去掉activity切换的动画效果  -->
    <style name="ThemeTips" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!--不带动画的对话框style-->
    <style name="style_dialog_without_anim" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="scstyle" parent="Theme.AppCompat.Light">

        <item name="colorControlActivated">#00000000</item>

        <item name="colorSwitchThumbNormal">#00000000</item>

        <item name="android:colorForeground">#00000000</item>
    </style>

    <style name="TabLayoutTextStyle" >
        <item name="android:textSize">15sp</item>
    </style>

    <dimen name="status_top_bar_height">0dp</dimen>
</resources>
