<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
		            <solid android:color="@color/segment_item_color" />
		            <padding android:left="0.5dip" android:top="1.0dip" android:right="0.5dip" android:bottom="1.0dip" />
		        </shape>
            </item>
            <item>
                <shape>
		            <solid android:color="@color/white" />
		        </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/segment_item_color" />
            <stroke android:width="1.0dip" android:color="@color/segment_item_color" />
        </shape>
    </item>
</selector>