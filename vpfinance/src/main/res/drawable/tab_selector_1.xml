<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_gray" />
                    <stroke android:width="1dp" android:color="@color/divider_color"/>
                    <padding android:bottom="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:left="-4dp" android:top="-4dp" android:right="-4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <stroke android:width="2dp" android:color="@color/main_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>