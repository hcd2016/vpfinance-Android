<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:background="#F04B4B"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/invitePerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0人"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计邀请好友"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="70dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/registerRewardCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计注册奖励"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="70dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/bonusesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计出借奖励"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/awardRecordForRegist"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/textview_padding_left_right"
                android:paddingRight="@dimen/textview_padding_left_right"
                android:gravity="center_vertical"
                android:text="注册奖励记录"
                android:drawableRight="@drawable/nav_next_2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"/>
            <TextView
                android:id="@+id/awardRecordForInvest"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/textview_padding_left_right"
                android:paddingRight="@dimen/textview_padding_left_right"
                android:gravity="center_vertical"
                android:text="出借奖励记录"
                android:drawableRight="@drawable/nav_next_2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="邀请攻略"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_padding_left_right"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.邀请好友注册且实名绑卡后可以获赠代金券奖励50元，"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:paddingLeft="@dimen/textview_padding_left_right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="   同时被邀请人可以获取20元代金券奖励。"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/textview_padding_left_right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="2.有效期内好友成功出借项目，推荐人还可得额外推荐出借奖励。"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_padding_left_right"/>
            <TextView
                android:id="@+id/tvInviteGift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text=""
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_padding_left_right"/>
            <TextView
                android:id="@+id/clickRule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="   规则说明  >>"
                android:paddingBottom="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/link_blue"
                android:paddingLeft="@dimen/textview_padding_left_right"/>
            <Button
                android:id="@+id/inviteFriends"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                style="@style/SubmitButtonStyle"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:text="邀请好友"
                android:layout_marginLeft="@dimen/textview_padding_left_right"
                android:layout_marginRight="@dimen/textview_padding_left_right"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>