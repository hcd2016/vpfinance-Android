<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray2">
    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar"
        android:orientation="vertical">

        <com.astuetz.PagerSlidingTabStrip
            app:pstsTabTextStyle="0"
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="42dip"
            app:pstsDividerColor="@color/transparent"
            app:pstsDividerPadding="0dp"
            app:pstsIndicatorColor="@color/red_text2"
            app:pstsIndicatorHeight="1dp"
            app:pstsScrollOffset="1dp"
            app:pstsShouldExpand="true"
            app:pstsTabBackground="@color/transparent"
            app:pstsTabPaddingLeftRight="3dp"
            app:pstsTextAllCaps="false"
            app:pstsUnderlineColor="@color/transparent"
            app:pstsUnderlineHeight="1px" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>