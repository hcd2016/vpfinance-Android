<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_bg_color" >
    
	<include
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    layout="@layout/titlebar_main" />
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <EditText
	        android:id="@+id/modify_trans_password_username"
	        android:layout_width="fill_parent"
	        android:layout_height="50.0dip"
	        android:layout_marginLeft="20.0dip"
	        android:layout_marginRight="20.0dip"
	        android:layout_marginTop="20.0dip"
	        android:background="@drawable/input_bg"
	        android:drawableLeft="@drawable/phone_input_hint"
	        android:drawablePadding="10.0dip"
	        android:hint="手机号"
	        android:inputType="number"
	        android:paddingLeft="10.0dip"
	        android:singleLine="true" />
	    
	    <EditText
	        android:id="@+id/modify_trans_password_oldtrade_password"
	        android:layout_width="fill_parent"
	        android:layout_height="50.0dip"
	        android:layout_marginLeft="20.0dip"
	        android:layout_marginRight="20.0dip"
	        android:layout_marginTop="10.0dip"
	        android:background="@drawable/input_bg"
	        android:drawableLeft="@drawable/password_input_hint"
	        android:drawablePadding="10.0dip"
	        android:hint="旧交易密码"
	        android:inputType="textPassword"
	        android:paddingLeft="10.0dip"
	        android:singleLine="true" />
	    
	    
	    <EditText
	        android:id="@+id/modify_trans_password_password"
	        android:layout_width="fill_parent"
	        android:layout_height="50.0dip"
	        android:layout_marginLeft="20.0dip"
	        android:layout_marginRight="20.0dip"
	        android:layout_marginTop="10.0dip"
	        android:background="@drawable/input_bg"
	        android:drawableLeft="@drawable/password_input_hint"
	        android:drawablePadding="10.0dip"
	        android:hint="交易密码"
	        android:inputType="textPassword"
	        android:paddingLeft="10.0dip"
	        android:singleLine="true" />
	    
	    <EditText
	        android:id="@+id/modify_trans_password_password2"
	        android:layout_width="fill_parent"
	        android:layout_height="50.0dip"
	        android:layout_marginLeft="20.0dip"
	        android:layout_marginRight="20.0dip"
	        android:layout_marginTop="10.0dip"
	        android:background="@drawable/input_bg"
	        android:drawableLeft="@drawable/password_input_hint"
	        android:drawablePadding="10.0dip"
	        android:hint="确认交易密码"
	        android:inputType="textPassword"
	        android:paddingLeft="10.0dip"
	        android:singleLine="true" />
	    
	    <EditText
	        android:id="@+id/modify_trans_password_idno"
	        android:layout_width="fill_parent"
	        android:layout_height="50.0dip"
	        android:layout_marginLeft="20.0dip"
	        android:layout_marginRight="20.0dip"
	        android:layout_marginTop="10.0dip"
	        android:background="@drawable/input_bg"
	        android:drawableLeft="@drawable/passcode_input_hint"
	        android:drawablePadding="10.0dip"
	        android:hint="身份证号码"
	        android:paddingLeft="10.0dip"
	        android:visibility="gone"
	        android:singleLine="true" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20.0dip"
	        android:layout_marginRight="20.0dip"
	        android:layout_marginTop="10.0dip"
	        android:orientation="horizontal" >

>
	        
	        <EditText
	            android:id="@+id/modify_trans_password_passcode"
	            android:layout_width="match_parent"
	            android:layout_height="50.0dip"
	            android:layout_marginRight="20dp"
	            android:layout_weight="0.5"
	            android:background="@drawable/input_bg"
	            android:drawableLeft="@drawable/passcode_input_hint"
	            android:drawablePadding="10.0dip"
	            android:hint="手机验证码"
	            android:inputType="number"
	            android:paddingLeft="10.0dip"
	            android:singleLine="true" />
	
	        <Button
	            android:id="@+id/modify_trans_password_fetch_passcode"
	            android:layout_width="match_parent"
	            android:layout_height="50.0dip"
	            android:layout_weight="0.6"
	            android:background="@drawable/passcode_btn"
	            android:text="获取验证码"
	            android:textColor="@android:color/white" />
	
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="70dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="20dp"
	        android:orientation="horizontal" >
	    
	        <Button
	            android:id="@+id/modify_trans_password_commit"
	            android:layout_width="fill_parent"
	            android:layout_height="50dip"
	            android:layout_gravity="center_vertical"
	            android:background="@drawable/commit_btn_selector"
	            android:text="设置"
	            android:textColor="@color/white" />
	        
	    </LinearLayout>
	    

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:gravity="right" >

	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="温馨提示: 初始交易密码为登录密码"
	            android:textColor="@color/dark_red" />
	    </LinearLayout>
	    
	</LinearLayout>
			
</LinearLayout>
