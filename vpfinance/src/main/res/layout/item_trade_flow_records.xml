        <ListView
            android:id="@+id/tradeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            >
        </ListView>
    </LinearLayout>


    <View
        android:id="@+id/ExDivider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_gray2"/>

</LinearLayout>

