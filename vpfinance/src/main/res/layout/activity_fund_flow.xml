<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/fake_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:visibility="gone" />
    <RelativeLayout
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:background="@color/main_color">

        <LinearLayout
            android:id="@+id/posLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/headBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/actionbar_button_selector"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:src="@drawable/nav_back"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/title"
            style="@style/SingleLineTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/title_state"
            android:layout_width="15dp"
            android:layout_height="8dp"
            android:layout_toRightOf="@+id/title"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:background="@color/main_color"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/beginTime"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text=""
                android:editable="false"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:background="@drawable/shape_fund_flow_border_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="至"
                android:layout_margin="8dp"/>
            <EditText
                android:id="@+id/endTime"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text=""
                android:editable="false"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:background="@drawable/shape_fund_flow_border_time"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/find"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_radius2_border_white"
                android:text="查看"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvBankHint"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="@string/fund_flow_hint"
            android:paddingRight="18dp"
            android:paddingLeft="18dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12"
            android:background="#FFEFE6"
            android:textColor="#C05659"
            android:lineSpacingExtra="3dp"
            android:drawableLeft="@drawable/icon_tips1"
            android:drawablePadding="12dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#eeeeee"
                    android:dividerHeight="1dp"
                    android:paddingTop="10dp"/>
            </android.support.v4.widget.SwipeRefreshLayout>
            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/servicer"
                android:gravity="center"
                android:text="点击刷新" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>