<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:id="@+id/clickDismissPop"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:background="@color/background_gray"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="出借金额"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/etMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="  可用余额5000.00元"
            android:background="@drawable/bg_edittext"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="全投"
            android:textColor="@color/white"
            android:background="@color/dark_red"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="预计产生收益500.00元"
            android:textColor="@color/dark_red"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:background="@color/background_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/use_voucher_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/agreement_checkbox_selector"
            android:button="@null"
            android:checked="false" />

        <TextView
            android:id="@+id/use_voucher_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="是否尝试使用代金券抵扣现金？"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:background="@color/background_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="同意《微品金融用户协议》和《产品认购协议》收起"
        android:textColor="@color/gray"
        android:textSize="12sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        android:background="@color/background_gray"/>
    <TextView
        android:id="@+id/popInvest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_red"
        android:textSize="18sp"
        android:text="我要出借"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="15dp"/>
</LinearLayout>