<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">
    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="V生活-欢旅-004"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/ivProductState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stype_bao"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <cn.vpfinance.vpjr.view.SmallCircularProgressView
                    android:id="@+id/circle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp" />
                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="%"
                    android:textColor="@color/dark_red"
                    android:textSize="20sp" />
            </RelativeLayout>
            <include
                android:id="@+id/countDown"
                layout="@layout/layout_time_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvProductTotalMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="600万"
                        android:textColor="@color/red_top"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="转让总额(元)"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/dark_grey"
                        />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_color"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvEarningsYield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10.0%"
                        android:textColor="@color/red_top"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="约定年利率"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/dark_grey"
                        />
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_color"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvProductAvailableMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="300万"
                        android:textColor="@color/red_top"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可购金额(元)"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/dark_grey"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原标信息"
                android:textColor="@color/text_black_no3_gray"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/text_item_margin_right_left"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/bangbang"
                android:drawablePadding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvProductNativeMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="600万"
                        android:textColor="@color/black_text"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原始本金(元)"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/dark_grey"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_color"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvProductRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10.0%"
                        android:textColor="@color/black_text"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原始利率"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/dark_grey"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_color"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvProductMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3个月"
                        android:textColor="@color/black_text"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目期限"
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/dark_grey"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/divider_color"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_item_height"
                android:layout_marginLeft="@dimen/text_item_margin_right_left"
                android:layout_marginRight="@dimen/text_item_margin_right_left"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款方式"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvRefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="按月付息到期还本"
                    android:textSize="14sp"
                    android:textColor="@color/text_black_no3_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_item_height"
                android:layout_marginLeft="@dimen/text_item_margin_right_left"
                android:layout_marginRight="@dimen/text_item_margin_right_left"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转让人"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvProductNativeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="嘻嘻哈哈"
                    android:textSize="14sp"
                    android:textColor="@color/text_black_no3_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_item_margin_right_left"
                android:layout_marginRight="@dimen/text_item_margin_right_left"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:minHeight="40dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="转让方式"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvTransferWay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="溢价转让，转让总额高于原始本金，到期净收益利率将低于原始利率"
                    android:textSize="12sp"
                    android:textColor="@color/text_black_no3_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray2"/>
            <TextView
                android:id="@+id/clickToNativeProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_item_height"
                android:text="查看原标"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:drawableLeft="@drawable/ic_transfer_product_2"
                android:drawablePadding="10dp"
                android:layout_marginRight="@dimen/text_item_margin_right_left"
                android:layout_marginLeft="@dimen/text_item_margin_right_left"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/nav_next_2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/clickToRecord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_item_height"
                android:text="投标记录"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:drawableLeft="@drawable/ic_transfer_product_3"
                android:drawablePadding="10dp"
                android:layout_marginRight="@dimen/text_item_margin_right_left"
                android:layout_marginLeft="@dimen/text_item_margin_right_left"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/nav_next_2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/clickToAvailableTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_item_height"
                android:text="剩余还款计划"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                android:drawableLeft="@drawable/ic_transfer_product_4"
                android:drawablePadding="10dp"
                android:layout_marginRight="@dimen/text_item_margin_right_left"
                android:layout_marginLeft="@dimen/text_item_margin_right_left"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/nav_next_2"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="70dp"
                android:background="@color/bg_gray2">
                <Button
                    android:id="@+id/btnInvest"
                    style="@style/SubmitButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="我要出借"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>