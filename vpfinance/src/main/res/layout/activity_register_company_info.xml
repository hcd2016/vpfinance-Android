<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.jewelcredit.ui.widget.ActionBarWhiteLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请完善企业信息"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/text_333333"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="企业信息须真实有效，否则无法通过银行存管认证"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#4d4d4d"/>

    <cn.vpfinance.vpjr.view.EditTextWithDel
        android:id="@+id/et_company_name"
        style="@style/SampleNumberEditStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/register_company_name"
        android:hint="请输入企业名称">

        <requestFocus />
    </cn.vpfinance.vpjr.view.EditTextWithDel>

    <cn.vpfinance.vpjr.view.EditTextWithDel
        android:id="@+id/et_credit_num"
        style="@style/SampleNumberEditStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/register_company_code"
        android:hint="请输入18位统一社会信用代码"/>

    <cn.vpfinance.vpjr.view.EditTextWithDel
        android:id="@+id/et_legal_name"
        style="@style/SampleNumberEditStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/register_company_user"
        android:hint="请输入法人代表姓名"/>

    <cn.vpfinance.vpjr.view.EditTextWithDel
        android:id="@+id/et_company_address"
        style="@style/SampleNumberEditStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/register_company_address"
        android:hint="请输入公司地址"/>

    <Button
        android:id="@+id/btnNext"
        style="@style/SubmitButtonStyle"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:text="下一步"/>
</LinearLayout>