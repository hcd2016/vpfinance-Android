<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:background="@color/account_bank_header">

                    <cn.vpfinance.vpjr.view.CircleImg
                        android:id="@+id/userHead"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/icon_mine_header"
                        app:border_width="1px" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@id/userHead"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvUserName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxWidth="120dp"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                tools:text="你好！一帆" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/myDescribe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="150dp"
                            android:layout_marginTop="5dp"
                            android:drawableRight="@drawable/edit_describe"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxEms="8"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            tools:text="钱在我手，想投就投" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivBandActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/bangkajihuo"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/header_no_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/account_bank_header"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="280dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/pic_cunguan" />

                    <TextView
                        android:id="@+id/tvNoOpenHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="为了保障您的资金安全 需先开通存管账户"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tvNoOpenHint2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="开通后10分钟左右可以查看开通结果 请勿重复操作"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />

                    <Button
                        android:id="@+id/click_open_bank_account"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/shape_start_bank_account"
                        android:text="开通存管账户"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tvOpenGuide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:text="查看图文指引"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="温馨提示:"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="1.开通后10分钟左右可以查看开通结果,请勿重复操作" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="2.开通存管账户前请先进行实名认证" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/open_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/account_bank_header"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="74.5dp"
                            android:layout_below="@id/userHead"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTotalMoney"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:alpha="0.6"
                                    android:text="资产总额"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="14.8dp"
                                android:layout_marginTop="18.6dp"
                                android:background="@color/white" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvAvailableMoney"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:alpha="0.6"
                                    android:text="可用余额"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="14.8dp"
                                android:layout_marginTop="18.6dp"
                                android:background="@color/white" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTotalIncome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.00"
                                    android:textColor="@color/white"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:alpha="0.6"
                                    android:text="累计收益"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/clickFundOverView"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:background="#20ffffff"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingRight="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="银行存管账户资产总览"
                                android:textColor="@color/white" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:background="@drawable/nav_next_white" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/withdraw"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="提 现"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/divider_color" />

                        <TextView
                            android:id="@+id/recharge"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="充 值"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:id="@+id/click_return_money_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:paddingLeft="17dp"
                            android:paddingRight="23dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@drawable/ic_calendar"
                                android:drawablePadding="10dp"
                                android:gravity="center_vertical"
                                android:text="回款日历"
                                android:textColor="@color/text_1c1c1c" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvReturnMoneyCount"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/text_999999"
                                android:textSize="@dimen/text_size_12"
                                tools:text="你有0笔待回款事项" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center"
                                android:background="@drawable/nav_next" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:id="@+id/click_return_money_content"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvReturnMoneyPrincipal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="0.00"
                                android:textColor="@color/red_text"
                                android:textSize="@dimen/text_size_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="待回款本金"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/divider_color" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvReturnMoneyIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/red_text"
                                android:textSize="@dimen/text_size_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="待回款利息"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_gray2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/clickFundRecord"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/mine_icon_4_size"
                                android:layout_height="@dimen/mine_icon_4_size"
                                android:background="@drawable/my_invest_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="我的投资"
                                android:textColor="@color/normal_text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/click_my_transfer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/mine_icon_4_size"
                                android:layout_height="wrap_content"
                                android:background="@drawable/my_transferor_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="我要转让"
                                android:textColor="@color/normal_text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/click_fund_flow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/mine_icon_4_size"
                                android:layout_height="@dimen/mine_icon_4_size"
                                android:background="@drawable/money_water_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="资金流水"
                                android:textColor="@color/normal_text_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/click_invest_summary"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/mine_icon_4_size"
                                android:layout_height="@dimen/mine_icon_4_size"
                                android:background="@drawable/financial_statistics_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="投资统计"
                                android:textColor="@color/normal_text_color" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/bg_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/noOpenHidden"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/click_auto_invest_setting"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="35dp"
                            android:paddingRight="23dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@drawable/icon_zidongtoubiao"
                                android:drawablePadding="15dp"
                                android:gravity="center_vertical"
                                android:text="自动投标"
                                android:textColor="@color/text_333333"
                                android:textSize="15sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tv_open_bank_account"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                android:textColor="@color/text_333333"
                                tools:text="已开启" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:background="@drawable/nav_next" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="@dimen/mine_divider_margin_left"
                            android:layout_marginRight="20dp"
                            android:background="@color/divider_color" />

                        <LinearLayout
                            android:id="@+id/click_account_e"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="35dp"
                            android:paddingRight="23dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@drawable/icon_ezhanghu"
                                android:drawablePadding="15dp"
                                android:gravity="center_vertical"
                                android:text="我的存管账户"
                                android:textColor="@color/text_333333"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/ivUpdateHxTag"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/hx_update_tag"
                                android:visibility="gone" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/img_dot1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:src="@drawable/img_dot"
                                android:visibility="gone" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:background="@drawable/nav_next" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="@dimen/mine_divider_margin_left"
                            android:layout_marginRight="20dp"
                            android:background="@color/divider_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/clickTrialCoin"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="35dp"
                        android:paddingRight="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/my_experience_money"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="我的体验金"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/img_dot"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:src="@drawable/img_dot"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:background="@drawable/nav_next" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/mine_divider_margin_left"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:id="@+id/clickVoucher"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="35dp"
                        android:paddingRight="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/my_voucher"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="我的优惠券"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/canUseNum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
