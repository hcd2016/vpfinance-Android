<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/transfer_list_item_padding"
        android:paddingRight="@dimen/transfer_list_item_padding"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v成长-智能-002"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tenderMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥100,000"
            android:gravity="center|right"
            android:textColor="@color/dark_red"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/transfer_list_item_padding"
        android:paddingRight="@dimen/transfer_list_item_padding"
        android:layout_marginTop="0dp">
        <TextView
            android:id="@+id/tenderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="10dp"
            android:text="2015-8-29 14:30:10"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/voucherMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="已抵扣代金券50元"
            android:gravity="center|right"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/bg_gray2"
        android:layout_marginTop="6dp"/>

</LinearLayout>