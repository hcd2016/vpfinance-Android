<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/yesInvest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/invest_summary_bg"
            android:visibility="gone">
            <RadioGroup
                android:id="@+id/selectType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">
                <RadioButton
                    android:id="@+id/type1"
                    android:layout_width="108dp"
                    android:layout_height="29dp"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/btn_invest_summary_select"
                    android:textColor="@color/white"
                    android:text="投资产品分布"/>
                <RadioButton
                    android:id="@+id/type2"
                    android:layout_width="108dp"
                    android:layout_height="29dp"
                    android:button="@null"
                    android:text="项目总额统计"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_invest_summary_select2"
                    android:gravity="center"/>
                <RadioButton
                    android:id="@+id/type3"
                    android:layout_width="108dp"
                    android:layout_height="29dp"
                    android:button="@null"
                    android:text="收益统计"
                    android:background="@drawable/btn_invest_summary_select3"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </RadioGroup>

            <FrameLayout
                android:id="@+id/contentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/noInvest"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_invest_summary_no_data"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亲，您还没进行投资喔"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <Button
                    android:id="@+id/invest"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    style="@style/SubmitButtonStyle"
                    android:layout_marginTop="20dp"
                    android:text="我要出借"
                    android:layout_centerHorizontal="true"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>