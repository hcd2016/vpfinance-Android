<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="70dp"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:paddingBottom="10dp"
              android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_broder_id"
            android:paddingBottom="1dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:text="000"
            android:textColor="@color/text_cccccc" />

        <TextView
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="投标人"
            android:textColor="#1C1C1C" />
        <TextView
            android:id="@+id/tvPresell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约"
            android:textSize="13sp"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/bg_red_btn_border"
            android:textColor="@color/red_text"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="投标金额"
        android:textColor="#3c8ddf"
        android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvVoucheMoney"
            tools:text="已抵扣88.88元"
            android:textSize="@dimen/text_size_12"
            android:drawableLeft="@drawable/voucher"
            android:drawablePadding="5dp"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/text_size_12"
            android:text="投标日期"
            android:textColor="@color/text_999999" />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="投标时间"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
