            <ImageView
                android:id="@+id/ivAllowTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_zhuan"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_fdjx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_fdjx"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivProductState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/item_loan_title"
                android:background="@drawable/stype_bao"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/titleArea"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.87"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/item_loan_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dark_red"
                                android:textSize="22sp"
                                tools:text="9.5" />

                            <TextView
                                android:id="@+id/item_loan_rate_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="@color/dark_red"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_addrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_rate"
                            android:gravity="center|right"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            tools:text="+0.2%"
                            tools:visibility="visible" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/item_loan_term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:textColor="@color/text_282828"
                        android:textSize="16sp"
                        tools:text="6个月" />

                    <TextView
                        android:id="@+id/item_loan_totle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:textColor="@color/text_282828"
                        android:textSize="16sp"
                        tools:text="100万元" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/tv_rate_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="约定年利率"
                        android:textColor="@color/text_999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvMonthInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="项目期限"
                        android:textColor="@color/text_999999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvTotalMoneyInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="项目总额"
                        android:textColor="@color/text_999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="2.5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="94dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/bg_order"
                android:gravity="center"
                android:text="预   售   中"
                android:textColor="@color/red_top"
                android:textSize="13sp" />

            <cn.vpfinance.vpjr.view.MyCountDownTimer
                android:id="@+id/countDown"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                custom:newLayout="@layout/layout_time_countdown3" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_no_orlder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="20dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true">

                <View
                    android:id="@+id/circle_background"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_circle_progress"
                    android:visibility="gone" />

                <cn.vpfinance.vpjr.view.SmallCircularProgressView
                    android:id="@+id/circle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/red_text"
                    android:textSize="12sp"
                    android:visibility="visible"
                    tools:text="10.00%" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/rewardIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_rate" />

        <ImageView
            android:id="@+id/iphone7"
            android:layout_width="100dp"
            android:layout_height="33dp"
            android:layout_alignLeft="@+id/ll_Order"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ll_Order"
            android:background="@drawable/ic_iphone7_index"
            android:visibility="gone"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleArea"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/red_text"
                android:textSize="30sp"
                tools:text="9.5%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rate"
                android:gravity="right"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:text="+0.2%"
                tools:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
