<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:tag="dayOfTheMonthLayout">

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle"
        android:tag="dayOfTheMonthBackground">

        <TextView
            android:id="@+id/textView"
            android:textColor="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_16"
            android:gravity="center"
            android:tag="dayOfTheMonthText"
            tools:text="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/gray_point"
                android:tag="dayOfTheMonthCircleImage1"
                android:tint="#999999"
                android:visibility="visible" />

            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/gray_point"
                android:tag="dayOfTheMonthCircleImage2"
                tools:tint="#999999"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
