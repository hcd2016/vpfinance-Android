<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">
    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        tools:visibility="visible"
        android:id="@+id/transfer_info">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/productTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="8dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#1c1c1c"
                android:textSize="16sp" />
            android:drawableRight="@drawable/stype_bao"
            <ImageView
                android:id="@+id/ivProductState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stype_bao"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:id="@+id/ivAllowTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_zhuan"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="3dp"
                tools:visibility="visible"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/isAllowTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stype_lv"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="3dp"
                tools:visibility="visible"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="约定年利率"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/productRate"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="0.0%"/>
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black_transparent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="8dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvMonthInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="投资期限"/>
                <TextView
                    android:id="@+id/productMonth"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="0个月"/>
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black_transparent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="8dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="投资总额"/>
                <TextView
                    android:id="@+id/productIssueLoan"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text=""/>
            </LinearLayout>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black_transparent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="8dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="还款方式"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/productRefundWay"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_buy"
                android:text="可购金额"
                android:textColor="@color/text_1c1c1c"
                android:gravity="center"/>
            <TextView
                android:id="@+id/productAvailMoney"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                tools:text="20000元"
                android:textColor="@color/text_999999"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_transparent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingRight="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="账户余额"
                android:textColor="@color/text_1c1c1c"
                android:gravity="center"/>
            <TextView
                android:id="@+id/cashBalance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                tools:text="10000元"
                android:textColor="@color/text_999999"
                android:gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/recharge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="去充值"
                android:gravity="center"
                android:textColor="@color/text_999999"
                android:drawablePadding="7dp"/>
            <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:background="@drawable/nav_next"
                android:layout_gravity="center"
                android:layout_margin="8dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:id="@+id/ll_normal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="认购金额"
                    android:gravity="center"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/etRechargeMoney"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:hint="100元起投"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/text_1c1c1c"
                    android:gravity="center"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/allRecharge"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="全投"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/main_color"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="#f7f7f7"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transfer_money"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:text="购买本金：0.00元"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="5dp"
                    android:text="预计收益:"/>
                <TextView
                    android:id="@+id/tvPredictMoney"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_top"
                    android:layout_gravity="center_vertical|right"
                    android:text="0.00元"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_acitvity"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <EditText
                    android:id="@+id/etRechargeMoney_activity"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:hint="请输入认购金额  100元起投"
                    android:textSize="@dimen/text_size_14"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/text_1c1c1c"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/et_invest_num_bg_shape"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="#f7f7f7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/text_size_10"
                        android:text="预计收益:"/>
                    <TextView
                        android:id="@+id/tvPredictMoney_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_text"
                        android:textSize="@dimen/text_size_10"
                        android:layout_gravity="center"
                        android:text="0.00元"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/allRecharge_activity"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="全投"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/red_text"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/invest_voucher_bg"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginLeft="2dp"
                android:id="@+id/rl_iphone_submit">

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点此投资\n选择iPhone7"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/text_1c1c1c"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="15dp"/>
                <ImageView
                    android:layout_toRightOf="@id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_iphone7"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:text="点击投资"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="6dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_submit"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>
    <LinearLayout
        android:id="@+id/selectVoucher"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="优惠券"
            android:gravity="center"
            android:layout_marginRight="8dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tvUseVoucher"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textColor="@color/red_text"
                android:background="@drawable/invest_voucher_bg"
                android:textSize="@dimen/text_size_10"
                android:text="张可用"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvCalcedMoney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_999999"
            android:text="未使用"
            android:gravity="center"/>
        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:background="@drawable/nav_next"
            android:layout_gravity="center"
            android:layout_margin="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_change_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">

        <CheckBox
            android:id="@+id/mCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/agreement_checkbox_selector"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="我已阅读并同意"
            android:textColor="@color/text_black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tvProtocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="合同范本"
            android:textColor="@color/link_blue"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/tvProtocal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="合同范本"
            android:textColor="@color/link_blue"
            android:textSize="10sp"
            tools:visibility="visible"
            android:visibility="gone"/>
    </LinearLayout>
    <Button
        android:id="@+id/invest"
        style="@style/SubmitButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="立即投资"
        android:textSize="18sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/tv_userOrder"
        tools:text="您将使用1张预约券进行预约"
        android:textSize="@dimen/text_size_12"
        android:drawableLeft="@drawable/ic_tanhao"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:id="@+id/transfer_des"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示:"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/text_black_no3_gray"
            android:text="请认真核实债权转让产品信息及账户信息，一旦点击确认按钮，表示您将确认收购该笔债权且不能撤销！"/>
    </LinearLayout>
</LinearLayout>