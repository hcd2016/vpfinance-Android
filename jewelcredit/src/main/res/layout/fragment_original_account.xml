<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/account_original_header">

                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="82dp">

                        <cn.vpfinance.vpjr.view.CircleImg
                            android:id="@+id/userHead"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_marginLeft="25dp"
                            app:border_width="1px"
                            android:layout_marginTop="25dp"
                            android:src="@drawable/icon_mine_header" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/userHead"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxWidth="120dp"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    tools:text="你好！一帆" />

                                <TextView
                                    android:id="@+id/level"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/bg_level"
                                    android:gravity="center"
                                    android:textColor="@color/text_333333"
                                    android:textSize="@dimen/text_size_10"
                                    android:visibility="gone"
                                    tools:text="初学乍练V1"
                                    tools:visibility="visible" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/my_describe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="150dp"
                                android:layout_marginTop="5dp"
                                android:drawableRight="@drawable/edit_describe"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxEms="8"
                                android:singleLine="true"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                tools:text="钱在我手，想投就投" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/content_kill_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="58dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总投资打败了"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_kill_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**"
                                android:textColor="#FFD041"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="的用户"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="74.5dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                tools:text="1036900.00" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="资产总额"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:alpha="0.6"/>
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="14.8dp"
                            android:layout_marginTop="18.6dp"
                            android:background="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAvailableMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                tools:text="898416.00" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="可用余额"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:alpha="0.6" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="14.8dp"
                            android:layout_marginTop="18.6dp"
                            android:background="@color/divider_color" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                tools:text="3658.00" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="累计收益"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:alpha="0.6"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/clickFundOverView"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:elevation="2dp"
                        android:background="#20ffffff"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="连连支付账户资产总览"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:background="@drawable/nav_next_white" />
                    </LinearLayout>
                </LinearLayout>






                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/click_withdraw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="提 现"
                        android:textColor="@color/text_333333"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#C8C7CC" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/isAllowRecharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/recharge_close"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/click_recharge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="充 值"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:id="@+id/click_return_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:paddingLeft="17dp"
                        android:paddingRight="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_calendar"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="回款日历"
                            android:textColor="@color/text_1c1c1c" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvReturnMoneyCount"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/text_999999"
                            android:textSize="@dimen/text_size_12"
                            tools:text="你有0笔待回款事项" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:background="@drawable/nav_next" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvReturnMoneyPrincipal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="0.00"
                                android:textColor="@color/red_text"
                                android:textSize="@dimen/text_size_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="待回款本金"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/divider_color" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvReturnMoneyIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/red_text"
                                android:textSize="@dimen/text_size_16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="待回款利息"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/click_my_invest"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/mine_icon_4_size"
                            android:layout_height="@dimen/mine_icon_4_size"
                            android:background="@drawable/my_invest" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="我的投资"
                            android:textColor="@color/normal_text_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/click_my_transfer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/mine_icon_4_size"
                            android:layout_height="@dimen/mine_icon_4_size"
                            android:background="@drawable/my_transferor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="我要转让"
                            android:textColor="@color/normal_text_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/click_fund_flow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/mine_icon_4_size"
                            android:layout_height="@dimen/mine_icon_4_size"
                            android:background="@drawable/money_water" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="资金流水"
                            android:textColor="@color/normal_text_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/click_invest_summary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/mine_icon_4_size"
                            android:layout_height="@dimen/mine_icon_4_size"
                            android:background="@drawable/financial_statistics" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="投资统计"
                            android:textColor="@color/normal_text_color" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/bg_gray2" />

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/click_auto_invest_setting"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="35dp"
                        android:paddingRight="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/icon_zidongtoubiao"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="自动投标"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_open_bank_account"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:textColor="@color/text_999999"
                            tools:text="已开启" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:background="@drawable/nav_next" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/mine_divider_margin_left"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/mine_divider_margin_left"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/clickTravel"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="35dp"
                        android:paddingRight="23dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:drawableLeft="@drawable/travel"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="玩赚旅游"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:background="@drawable/nav_next" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/content_mine_inform"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/tv_mine_inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@color/bg_gray2"
            android:drawableLeft="@drawable/ic_trumpet"
            android:drawablePadding="10dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:scrollHorizontally="true"
            android:text="你跑啊，你倒是跑啊！"
            android:textColor="@color/red_top" />

        <ImageButton
            android:id="@+id/ib_mine_inform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_close_circle" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_setup_guide"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#1c1c1c"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/click_setup_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您有个人资料未完成，点此快速完善吧！>>"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ib_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_invest_summary_x" />
    </LinearLayout>
</RelativeLayout>
