<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/click_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="11dp">
            <TextView
                android:id="@+id/pid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_rectangle_corners_stroke"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="消费宝20170315"
                android:textColor="@color/text_1c1c1c"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:textColor="@color/text_666666"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/total_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="20万"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/text_1c1c1c"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="借款总额"
                    android:gravity="center"
                    android:textColor="@color/text_999999"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="1个月"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/text_1c1c1c"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="借款期限"
                    android:gravity="center"
                    android:textColor="@color/text_999999"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/way"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="消费分期"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/text_1c1c1c"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="借款用途"
                    android:gravity="center"
                    android:textColor="@color/text_999999"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/my_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="15万"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/text_1c1c1c"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>
                <TextView
                    android:id="@+id/my_money_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我加入的金额"
                    android:gravity="center"
                    android:textColor="@color/text_999999"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                tools:text="还款中"/>
            <TextView
                android:id="@+id/protocol"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="【债权转让协议】"
                android:gravity="right|center_vertical"
                android:textColor="@color/text_3c8ddf"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_gray2"/>
</LinearLayout>