<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/mActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短信验证码已发送至您的手机"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:textColor="@color/text_1c1c1c"
        android:textSize="@dimen/text_size_16"
        android:layout_below="@id/mActionBar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvSms"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp">
        <EditText
            android:id="@+id/etCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLength="6"
            android:hint="请输入短信验证码"
            android:paddingLeft="8dp"
            android:background="@drawable/shape_radius1_border_cccccc"/>
        <Button
            android:id="@+id/btnSend"
            android:layout_width="125dp"
            android:layout_height="45dp"
            style="@style/SubmitButtonStyle"
            android:layout_marginLeft="10dp"
            android:text="重新发送"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SubmitButtonStyle"
        android:background="@drawable/bg_btn_submit"
        android:layout_alignParentBottom="true"
        android:text="下一步"/>
</RelativeLayout>