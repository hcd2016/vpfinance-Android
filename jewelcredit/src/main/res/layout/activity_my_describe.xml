<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/bg_gray2">

    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/edit_des"
            android:background="@drawable/bg_des"
            android:layout_marginTop="10dp"
            android:padding="14dp"
            android:gravity="left|top"
            android:hint="设置我的个性签名"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/max_tv"
            android:text="0/32"
            android:textSize="18sp"
            android:gravity="right"
            android:layout_alignParentBottom="true"
            android:textColor="@color/background_gray"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>

</LinearLayout>