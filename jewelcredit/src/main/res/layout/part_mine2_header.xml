<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/red_top">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">

        <cn.vpfinance.vpjr.view.CircleImg
            android:id="@+id/userHead"
            android:layout_width="@dimen/ic_user_head_size"
            android:layout_height="@dimen/ic_user_head_size"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="25dp"
            android:padding="10dp"
            android:src="@drawable/user_head"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/userHead"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="你好!幸运号"/>

                <TextView
                    android:id="@+id/level"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_level"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="初学乍练V1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/my_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="150dp"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/edit_describe"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="8"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                tools:text="钱在我手，想投就投"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="55dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:text="总投资打败了80%的用户"/>

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_top"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/sex_smile"/>
        <!--<cn.vpfinance.vpjr.view.MarqueeTextView
            android:id="@+id/marqueeTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical|right"
            tools:text="你跑啊，你倒是跑啊！"
            android:textColor="@color/red_top"
            android:background="@color/bg_gray2"/>-->
        <LinearLayout
            android:id="@+id/clickFundOverView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingRight="12dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#20ffffff"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="14sp"
                android:paddingLeft="30dp"
                android:text="资产总览"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:background="@drawable/nav_next_white"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>