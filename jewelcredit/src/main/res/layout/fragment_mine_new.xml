<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/vRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/vContentNoOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/account_bank_header"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/header_no_open_inside"
                        android:layout_width="match_parent"
                        android:layout_height="197dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="19.5dp"
                        android:background="@color/account_bank_header"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/pic_cunguan" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/vClickOpenBankAccount"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/shape_start_bank_account"
                        android:text="开通存管账户"
                        android:textColor="@color/text_333333"
                        android:textSize="@dimen/text_size_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="温馨提示:"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="1.开通后10分钟左右可以查看开通结果,请勿重复操作" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="2.开通存管账户前请先进行实名认证" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/vContentOpen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/account_bank_header"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:layout_marginTop="18dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <cn.vpfinance.vpjr.view.CircleImg
                                android:id="@+id/vUserHead"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:layout_marginLeft="17dp"
                                android:src="@drawable/icon_mine_header"
                                app:border_width="1px" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@id/userHead"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxWidth="120dp"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    tools:text="你好！一帆" />

                                <TextView
                                    android:id="@+id/tvDescribe"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:drawableRight="@drawable/edit_describe"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxEms="8"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    tools:text="钱在我手，想投就投" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/ivBandActive"
                                android:layout_width="80dp"
                                android:layout_height="70dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/bangkajihuo"
                                android:visibility="gone"
                                tools:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="74.5dp"
                            android:background="#1AFFFFFF"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTotalMoney"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    tools:text="1036900.00" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="资产总额"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="14.8dp"
                                android:layout_marginTop="18.6dp"
                                android:background="@color/divider_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvAvailableMoney"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    tools:text="898416.00" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="可用余额"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="14.8dp"
                                android:layout_marginTop="18.6dp"
                                android:background="@color/divider_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTotalIncome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    tools:text="3658.00" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="累计收益"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vClickFundOverView"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:background="#1Affffff"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingRight="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="银行存管账户资产总览"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:background="@drawable/nav_next_white" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_gray2"/>

                    <LinearLayout
