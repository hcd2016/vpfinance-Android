                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vClickWithdraw"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="提 现"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#C8C7CC" />

                        <TextView
                            android:id="@+id/vClickRecharge"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="充 值"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_gray2"/>

                    <LinearLayout
                        android:id="@+id/vClickReturnMoney"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:paddingLeft="17dp"
                                android:paddingRight="23dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawableLeft="@drawable/ic_calendar"
                                    android:drawablePadding="10dp"
                                    android:gravity="center_vertical"
                                    android:text="回款日历"
                                    android:textColor="@color/text_1c1c1c" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/tvReturnMoneyCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginRight="8dp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/text_999999"
                                    android:textSize="@dimen/text_size_12"
                                    tools:text="你有0笔待回款事项" />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="13dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/nav_next" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="11dp"
                            android:background="@color/divider_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:background="@color/white">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvReturnMoneyPrincipal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10dp"
                                    android:gravity="center"
                                    android:text="0.00"
                                    android:textColor="@color/red_text"
                                    android:textSize="@dimen/text_size_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="待回款本金"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@color/divider_color" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvReturnMoneyIncome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="10dp"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/red_text"
                                    android:textSize="@dimen/text_size_16" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="待回款利息"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_gray2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/vClickMyInvest"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/mine_icon_4_size"
                                android:layout_height="@dimen/mine_icon_4_size"
                                android:background="@drawable/my_invest_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="我的投资"
                                android:textColor="@color/text_999999" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vClickMyTransfer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/mine_icon_4_size"
                                android:layout_height="@dimen/mine_icon_4_size"
                                android:background="@drawable/my_transferor_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="我要转让"
                                android:textColor="@color/text_999999" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vClickFundFlow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/mine_icon_4_size"
                                android:layout_height="@dimen/mine_icon_4_size"
                                android:background="@drawable/money_water_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="资金流水"
                                android:textColor="@color/text_999999" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vClickInvestSummary"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/mine_icon_4_size"
                                android:layout_height="@dimen/mine_icon_4_size"
                                android:background="@drawable/financial_statistics_blue" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="投资统计"
                                android:textColor="@color/text_999999" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:background="@color/bg_gray2" />

                    <LinearLayout
                        android:id="@+id/vClickAutoInvestSetting"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="35dp"
                        android:paddingRight="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/icon_zidongtoubiao"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="自动投标"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvOpenBankAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:textColor="@color/text_999999"
                            tools:text="已开启" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:background="@drawable/nav_next" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/mine_divider_margin_left"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:id="@+id/vClickEAccount"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="35dp"
                        android:paddingRight="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/icon_ezhanghu"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="我的存管账户"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />
                        <ImageView
                            android:id="@+id/ivUpdateHxTag"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:src="@drawable/hx_update_tag"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/ivEAccountDot"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:src="@drawable/img_dot"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:background="@drawable/nav_next" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/mine_divider_margin_left"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:id="@+id/vClickTrialCoin"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="35dp"
                        android:paddingRight="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/my_experience_money"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="我的体验金"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/ivTrialCoin"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:src="@drawable/img_dot"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:background="@drawable/nav_next" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/mine_divider_margin_left"
                        android:layout_marginRight="20dp"
                        android:background="@color/divider_color" />

                    <LinearLayout
                        android:id="@+id/vClickVoucher"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="35dp"
                        android:paddingRight="23dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/my_voucher"
                            android:drawablePadding="15dp"
                            android:gravity="center_vertical"
                            android:text="我的优惠券"
                            android:textColor="@color/text_333333"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvCanUseCoupon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:textColor="@color/text_999999"
                            tools:text="2张未使用" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:background="@drawable/nav_next" />
