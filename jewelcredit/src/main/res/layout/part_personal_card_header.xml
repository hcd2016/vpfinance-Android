<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/red_top">

    <cn.vpfinance.vpjr.view.CircleImg
        android:id="@+id/userHead"
        android:layout_width="@dimen/ic_user_head_size"
        android:layout_height="@dimen/ic_user_head_size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:padding="10dp"
        android:src="@drawable/user_head"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/userHead"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            tools:text="幸运号"/>

        <TextView
            android:id="@+id/my_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"
            tools:text="钱在我手，想投就投...."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近登录 "
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/loginTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffce26"
            android:textSize="@dimen/text_size_12"
            tools:text="刚刚"/>
    </LinearLayout>
</RelativeLayout>