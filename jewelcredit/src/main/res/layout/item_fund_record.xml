<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="15dp"
              android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v成长-智能-002"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tenderMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="¥100,000"
            android:gravity="center|right"
            android:textColor="@color/dark_red"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tenderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="10dp"
            android:text="2015-8-29 14:30:10"
            android:textSize="12sp"/>
        <View
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/voucherMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已抵扣代金券50元"
            android:drawableLeft="@drawable/voucher"
            android:drawablePadding="5dp"
            android:gravity="center|right"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible"
            />
    </LinearLayout>
    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnShareRedPacket"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:text="分享红包"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_red_corners"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/bg_gray2"
        android:layout_marginTop="6dp"/>

</LinearLayout>