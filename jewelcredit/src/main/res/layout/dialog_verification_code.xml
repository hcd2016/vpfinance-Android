<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/verification_code_dialog_bg_shape">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:gravity="center"
        android:text="请输入图形验证码"
        android:textColor="@color/text_999999"/>

    <LinearLayout
        android:layout_marginTop="33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/ver_code_tv"
            android:layout_marginLeft="15dp"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:hint="请输入验证码"
            android:textSize="@dimen/text_size_14"
            android:textColorHint="@color/text_cccccc"
            android:background="@drawable/bg_edittext_radius"/>

        <ImageView
            android:id="@+id/ver_code_img"
            android:layout_marginLeft="15dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            />

        <ImageView
            android:id="@+id/refresh"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_shuaxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        tools:text="验证码错误!"
        android:textColor="@color/main_color"
        android:gravity="center"/>

    <View
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/text_1c1c1c"
            android:gravity="center"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/bg_gray2"/>
        <TextView
            android:id="@+id/tvAffirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确认"
            android:textColor="@color/main_color"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>