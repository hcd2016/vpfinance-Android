<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.jewelcredit.ui.widget.ActionBarWhiteLayout
        android:id="@+id/mActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成身份验证"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_666666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入新手机号码"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_1c1c1c"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手机"
            android:layout_marginTop="25dp"
            android:textSize="10sp"
            android:textColor="@color/text_666666"/>
        <cn.vpfinance.vpjr.view.EditTextWithDel
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:theme="@style/MyEditText"
            android:textSize="20sp"
            android:textColor="@color/text_1c1c1c"
            android:inputType="number"
            android:hint="请输入新手机号码"
            android:maxLength="11"/>

        <Button
            android:id="@+id/vClickGetCode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="获取短信验证码"
            android:layout_marginTop="35dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/shape_radius2_red"/>
    </LinearLayout>
</LinearLayout>