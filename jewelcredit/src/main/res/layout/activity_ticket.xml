<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/clickVoucherTicket"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_my_voucher"
                    android:textColor="@color/normal_text_color"
                    android:drawablePadding="12dp"
                    android:layout_marginLeft="21dp"
                    android:gravity="center"
                    android:text="我的代金券"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/voucherCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/text_black_no4_gray"
                    tools:text="1张券可用"/>
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/nav_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="48dp"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:id="@+id/clickAddrateTicket"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_my_addrate"
                    android:textColor="@color/normal_text_color"
                    android:drawablePadding="12dp"
                    android:layout_marginLeft="21dp"
                    android:gravity="center"
                    android:text="我的加息券"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/addrateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/text_black_no4_gray"
                    tools:text="1张券可用"/>
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/nav_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="48dp"
                android:background="@color/divider_color"/>

            <LinearLayout
                android:id="@+id/clickPresellTicket"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_my_presell"
                    android:textColor="@color/normal_text_color"
                    android:drawablePadding="12dp"
                    android:layout_marginLeft="21dp"
                    android:gravity="center"
                    android:text="我的预约券"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_new_tag"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:paddingLeft="13dp"
                    android:textSize="@dimen/text_size_12"
                    android:text="NEW"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/presellCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/text_black_no4_gray"
                    tools:text="1张券可用"/>
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/nav_next"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="48dp"
                android:background="@color/divider_color"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
