<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/bg_gray2">
        <RelativeLayout
            android:id="@+id/voucher_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_coupon">
            <RelativeLayout
                android:id="@+id/llHeader"
                android:layout_width="120dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/voucherState"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_presell_header_usable"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/presellName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="34sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="预"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/voucher_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="新手专享"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_alignLeft="@id/presellName"
                    android:layout_below="@id/presellName"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/llHeader"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">
                <ListView
                    android:id="@+id/mListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:dividerHeight="0dp"
                    android:divider="@color/transparent"/>

                <TextView
                    android:id="@+id/voucher_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_no4_gray"
                    android:textSize="@dimen/text_size_12"
                    tools:text="2015.10.18到期"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>