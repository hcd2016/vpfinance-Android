<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.jewelcredit.ui.widget.ActionBarLayout
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="62dp"
                android:src="@drawable/img_logo_v" />

            <TextView
                android:id="@+id/currVer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="当前版本0.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/clickAttent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_aboutme_weixin"
                        android:drawablePadding="5dp"
                        android:text="关注我们" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/nav_next_2"
                        android:gravity="center_vertical|right"
                        android:text="随时了解平台最新资讯"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/clickVP"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_aboutme_home"
                        android:drawablePadding="5dp"
                        android:text="我们官网" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/nav_next_2"
                        android:gravity="center_vertical|right"
                        android:text="www.vpfinance.cn"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:id="@+id/clickPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_aboutme_call"
                        android:drawablePadding="5dp"
                        android:text="客服热线" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="20dp"
                        android:drawableRight="@drawable/nav_next_2"
                        android:gravity="center_vertical|right"
                        android:text="0755-86627551"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/ic_aboutme_zaixiankefu" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在线客服" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="微信客服一对一为你解答"
                        android:textColor="@color/text_black" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="20dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:text="客服小微"
                        android:layout_marginLeft="22dp"
                        android:textSize="@dimen/text_size_12" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="微信号:"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/phone1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="13530986255"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="  或  "
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="vp_xiaowei"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:text="客服小金"
                        android:layout_marginLeft="22dp"
                        android:textSize="@dimen/text_size_12" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="微信号:"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/phone2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="18589082579"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="  或  "
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical|right"
                        android:text="vpjrkf"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="20dp"
                    android:background="@color/divider_color" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>